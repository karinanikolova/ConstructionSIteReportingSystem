@model IEnumerable<ContractorServiceModel>

@{
	ViewData["Title"] = "Contractor Suggestions for Approval";

	int n = 1;
}

<div class="mb-5">
	<h3 class="text-center">@ViewData["Title"]</h3>
</div>

<table class="table table-sm">
	<thead class="table-light">
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var contractor in Model)
		{
			<tr>
				<th scope="row">@n</th>
				<td>@contractor.Name</td>
				<td>
					<div class="btn-group" role="group" aria-label="Basic outlined example">
						<form asp-controller="ForReview" asp-action="ApproveContractor" asp-area="Admin" method="post">
							<input type="hidden" name="id" value="@contractor.Id" />
							<button type="submit" class="btn btn-outline-primary">Approve</button>
						</form>
						<form asp-controller="ForReview" asp-action="RemoveContractor" asp-area="Admin" method="post">
							<input type="hidden" name="id" value="@contractor.Id" />
							<button type="submit" class="btn btn-outline-primary">Remove</button>
						</form>
					</div>
				</td>
			</tr>
			n++;
		}
	</tbody>
</table>