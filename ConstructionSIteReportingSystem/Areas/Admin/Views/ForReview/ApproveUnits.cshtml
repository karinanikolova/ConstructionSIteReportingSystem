@model IEnumerable<UnitServiceModel>

@{
	ViewData["Title"] = "Measurement Unit Suggestions for Approval";

	int n = 1;
}

<div class="mb-5">
	<h3 class="text-center">@ViewData["Title"]</h3>
</div>

<table class="table table-sm">
	<thead class="table-light">
		<tr>
			<th scope="col">#</th>
			<th scope="col">Type</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var unit in Model)
		{
			<tr>
				<th scope="row">@n</th>
				<td>@unit.Type</td>
				<td>
					<div class="btn-group" role="group" aria-label="Basic outlined example">
						<form asp-controller="ForReview" asp-action="ApproveUnit" asp-area="Admin" method="post">
							<input type="hidden" name="id" value="@unit.Id" />
							<button type="submit" class="btn btn-outline-primary">Approve</button>
						</form>
						<a asp-controller="ForReview" asp-action="EditAndApproveUnit" asp-route-id="@unit.Id" class="btn btn-outline-primary" type="button">Edit and Approve</a>
						<form asp-controller="ForReview" asp-action="RemoveUnit" asp-area="Admin" method="post">
							<input type="hidden" name="id" value="@unit.Id" />
							<button type="submit" class="btn btn-outline-primary">Remove</button>
						</form>
					</div>
				</td>
			</tr>
			n++;
		}
	</tbody>
</table>